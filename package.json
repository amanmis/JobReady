{
  "name": "jobready-portal",
  "version": "1.0.0",
  "description": "Enterprise Job Training Portal",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "npm run build:css && npm run build:js && npm run optimize:images",
    "build:css": "postcss styles.css -o dist/styles.min.css --map",
    "build:js": "terser script.js -o dist/script.min.js --source-map --compress --mangle",
    "optimize:images": "imagemin src/images/* --out-dir=dist/images",
    "minify:html": "html-minifier --collapse-whitespace --remove-comments --minify-css --minify-js -o dist/index.html index.html",
    "serve:prod": "http-server dist -p 8080",
    "lighthouse": "lighthouse http://localhost:3000 --view",
    "analyze": "bundlesize",
    "test": "jest",
    "deploy": "npm run build && npm run deploy:staging"
  },
  "devDependencies": {
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "terser": "^5.22.0",
    "html-minifier": "^4.0.0",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "^7.0.0",
    "live-server": "^1.2.2",
    "http-server": "^14.1.1",
    "lighthouse": "^11.2.0",
    "bundlesize": "^0.18.1",
    "jest": "^29.7.0"
  },
  "bundlesize": [
    {
      "path": "./dist/styles.min.css",
      "maxSize": "50 kB"
    },
    {
      "path": "./dist/script.min.js",
      "maxSize": "30 kB"
    }
  ],
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ]
}